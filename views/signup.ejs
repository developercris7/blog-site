<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/css/bootstrap.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>signup</title>
</head>
<body>
    <%- include('./partials/components/nav.ejs') %>

  <div class="container my-4">
    <h1>Create Account</h1>
    <form method="post" action="/user/signup">
        <div class="mb-3">
            <label for="exampleInputFullname" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="exampleInputFullname" aria-describedby="exampleInputFullname" name="fullName" autocomplete="off">
          </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" autocomplete="off">
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1"  name="password" autocomplete="off">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
<hr>
<p>Already have an account ? <a href="/login">Login Here !</a></p>
  </div>
   
    <!-- Bootsrap JS cdn -->
    <%- include('./partials/js/bootstrap.ejs') %>
</body>
</html>